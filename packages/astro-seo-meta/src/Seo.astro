---
import Facebook, { type Props as FacebookProps } from './Facebook.astro';
import Meta, { type Props as MetaProps } from './Meta.astro';
import Twitter, { type Props as TwitterProps } from './Twitter.astro';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  icon?: string;
  themeColor?: string;
  colorScheme?: MetaProps['colorScheme'];
  facebook?: Pick<FacebookProps, 'image' | 'type' | 'url'>;
  twitter?: Pick<TwitterProps, 'image' | 'card' | 'site'>;
}

const {
  title,
  description,
  keywords,
  icon,
  themeColor,
  colorScheme,
  facebook,
  twitter
} = Astro.props;
---

<Fragment>
  <Meta
    title={title}
    description={description}
    keywords={keywords}
    icon={icon}
    themeColor={themeColor}
    colorScheme={colorScheme}
  />
  <Facebook
    title={title}
    description={description}
    image={facebook?.image}
    url={facebook?.url}
    type={facebook?.type}
  />
  <Twitter
    title={title}
    description={description}
    image={twitter?.image}
    site={twitter?.site}
    card={twitter?.card}
  />
</Fragment>
